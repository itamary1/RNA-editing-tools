        // containerOptions = "--volume ${star_outdir_dirname}:${star_outdir_dirname}"
    }
    withName:SORT{
        container = 'staphb/samtools:1.18'
        // containerOptions = "--volume ${star_outdir_dirname}:${star_outdir_dirname}"
    }
    withName:INDEX{
        container = 'staphb/samtools:1.18'
        // containerOptions = "--volume ${star_outdir_dirname}:${star_outdir_dirname}"
    }
    withName:CompressUnmapped{
        container = 'frolvlad/alpine-bash:latest'
        // containerOptions = "--volume ${star_outdir_dirname}:${star_outdir_dirname}"
    }
    withName:RemoveTemp{
        container = 'frolvlad/alpine-bash:latest'
        // containerOptions = "--volume ${star_outdir_dirname}:${star_outdir_dirname}"
    }
}

